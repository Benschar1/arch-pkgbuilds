# Maintainer: Tsvi Benschar <tsvihbenschar@gmail.com>
pkgname=srcinfo
pkgver=0.1.0
pkgrel=1
pkgdesc="A script to regenerate out of date .SRCINFO files"
arch=('any')
url="https://github.com/Benschar1/arch-pkgbuilds"
license=('GPL')
depends=('python')
source=("$pkgname")
b2sums=('SKIP')

package() {
  cd "$srcdir"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
